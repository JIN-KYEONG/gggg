    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/12.2.1/firebase-app.js";
        import { getFirestore, collection, doc, addDoc, onSnapshot, updateDoc, deleteDoc, query, where, orderBy, limit, serverTimestamp, getDocs } from "https://www.gstatic.com/firebasejs/12.2.1/firebase-firestore.js";

        const firebaseConfig = {
            apiKey: "AIzaSyBRyZKXMPocP7icMTDCWGSVsJWuCJjuz3A",
            authDomain: "cafe-order-system-test.firebaseapp.com",
            projectId: "cafe-order-system-test",
            storageBucket: "cafe-order-system-test.firebaseapp.com",
            messagingSenderId: "472409437909",
            appId: "1:472409437909:web:31eeabd3e362c34b37545c"
        };
        
        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const ordersCollection = collection(db, 'orders');

        const adminPassword = '1018';

        function getTodayDate() {
            const now = new Date();
            const utc = now.getTime() + (now.getTimezoneOffset() * 60 * 1000);
            const kst = utc + (9 * 60 * 60 * 1000);
            const date = new Date(kst);
            const year = date.getFullYear();
            const month = String(date.getMonth() + 1).padStart(2, '0');
            const day = String(date.getDate()).padStart(2, '0');
            return `${year}-${month}-${day}`;
        }

        const todayDate = getTodayDate();
        let ordersRef = collection(doc(ordersCollection, todayDate), 'dailyOrders');

        function scheduleDailyReset() {
            const now = new Date();
            const tomorrow = new Date(now);
            tomorrow.setDate(now.getDate() + 1);
            tomorrow.setHours(0, 0, 0, 0);

            const timeToReset = tomorrow.getTime() - now.getTime();
            
            setTimeout(() => {
                resetDailyOrders();
                setInterval(resetDailyOrders, 24 * 60 * 60 * 1000);
            }, timeToReset);
        }

        function resetDailyOrders() {
            deleteDoc(doc(ordersCollection, todayDate))
                .then(() => {
                    console.log("Daily orders reset successfully.");
                    location.reload();
                })
                .catch((error) => {
                    console.error("Error resetting daily orders: ", error);
                });
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            updateCurrentTime();
            loadOrdersFromFirebase();
            updateSubmitButtonState();
        });

        function loadOrdersFromFirebase() {
            onSnapshot(ordersRef, (querySnapshot) => {
                orders = [];
                querySnapshot.forEach((doc) => {
                    orders.push({ id: doc.id, ...doc.data() });
                });
                renderAdminOrders();
                updateOrderLimitBadge();
            });
        }

        document.getElementById('submitBtn').addEventListener('click', async () => {
            if (orders.length >= orderLimit) {
                openModal('orderFullModal');
                return;
            }

            const name = document.getElementById('teacherName').value.trim();
            const location = document.getElementById('location').value.trim();
            const request = document.getElementById('request').value;

            const newOrder = {
                name: name,
                location: location,
                menu: currentOrder.menu,
                temp: currentOrder.temp,
                options: currentOrder.options,
                request: request,
                status: 'checking',
                timestamp: serverTimestamp(),
                // âœ¨ ìˆ˜ì •: ì†Œë¬¸ì ì´ë¦„ í•„ë“œ ì¶”ê°€
                nameLowerCase: name.toLowerCase()
            };

            try {
                await addDoc(ordersRef, newOrder);
                openModal('orderSuccessModal');
                resetForm();
                switchMode('status');
                document.getElementById('myOrderName').value = name;
                searchMyOrder();
            } catch (e) {
                console.error("Error adding document: ", e);
                showToast('âŒ ì£¼ë¬¸ ì „ì†¡ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤. ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.');
            }
        });

        function updateCurrentTime() {
            const now = new Date();
            const formatter = new Intl.DateTimeFormat('ko-KR', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
                timeZone: 'Asia/Seoul'
            });
            const formattedDate = formatter.format(now);
            const badge = document.getElementById('orderLimitBadge');
            
            badge.textContent = `ğŸ“† ${formattedDate} (${orders.length}/${orderLimit})`;

            if (orders.length >= orderLimit) {
                badge.classList.add('full');
                document.getElementById('orderFullNotice').classList.remove('hidden');
            } else {
                badge.classList.remove('full');
                document.getElementById('orderFullNotice').classList.add('hidden');
            }
        }

        setInterval(updateCurrentTime, 60000);

        let currentOrder = {
            name: '',
            location: '',
            menu: '',
            temp: '',
            options: [],
            request: ''
        };
        let orders = [];
        const orderLimit = 10;
        let myOrder = null;

        function switchMode(mode) {
            document.querySelectorAll('.content-area').forEach(div => div.classList.add('hidden'));
            document.querySelectorAll('.mode-btn').forEach(btn => btn.classList.remove('active'));
            document.getElementById(`${mode}Mode`).classList.remove('hidden');
            document.querySelector(`.mode-btn[onclick="switchMode('${mode}')"]`).classList.add('active');
        }

        function updateOrderLimitBadge() {
            const badge = document.getElementById('orderLimitBadge');
            const notice = document.getElementById('orderFullNotice');
            
            badge.textContent = `ğŸ“† ${getTodayDate()} (${orders.length}/${orderLimit})`;

            if (orders.length >= orderLimit) {
                badge.classList.add('full');
                notice.classList.remove('hidden');
            } else {
                badge.classList.remove('full');
                notice.classList.add('hidden');
            }
            updateSubmitButtonState();
        }
        
        function selectMenu(element, menuName) {
            document.querySelectorAll('.menu-item').forEach(item => item.classList.remove('selected'));
            element.classList.add('selected');
            currentOrder.menu = menuName;
            
            const isHotOnly = element.classList.contains('hot-only');
            const isIceOnly = element.classList.contains('ice-only');

            document.getElementById('hotBtn').disabled = isIceOnly;
            document.getElementById('iceBtn').disabled = isHotOnly;
            
            if (isHotOnly && currentOrder.temp === 'ICE') {
                document.getElementById('iceBtn').classList.remove('selected');
                currentOrder.temp = '';
            }
            if (isIceOnly && currentOrder.temp === 'HOT') {
                document.getElementById('hotBtn').classList.remove('selected');
                currentOrder.temp = '';
            }

            updateSubmitButtonState();
        }

        function selectTemp(element, tempName) {
            document.querySelectorAll('.temp-btn').forEach(btn => btn.classList.remove('selected'));
            element.classList.add('selected');
            currentOrder.temp = tempName;
            updateSubmitButtonState();
        }

        function selectOption(element, optionName) {
            element.classList.toggle('selected');
            if (element.classList.contains('selected')) {
                currentOrder.options.push(optionName);
            } else {
                currentOrder.options = currentOrder.options.filter(opt => opt !== optionName);
            }
        }

        function updateSubmitButtonState() {
            const name = document.getElementById('teacherName').value.trim();
            const location = document.getElementById('location').value.trim();
            const isFormValid = name && location && currentOrder.menu && currentOrder.temp;
            
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = !isFormValid || orders.length >= orderLimit;
            submitBtn.textContent = 'ì£¼ë¬¸í•˜ê¸°';
        }

        function resetForm() {
            document.getElementById('teacherName').value = '';
            document.getElementById('location').value = '';
            document.getElementById('request').value = '';
            document.querySelectorAll('.menu-item.selected').forEach(item => item.classList.remove('selected'));
            document.querySelectorAll('.temp-btn.selected').forEach(btn => btn.classList.remove('selected'));
            document.querySelectorAll('.option-btn.selected').forEach(btn => btn.classList.remove('selected'));
            currentOrder = { name: '', location: '', menu: '', temp: '', options: [], request: '' };
            updateSubmitButtonState();
        }
        
        async function searchMyOrder() {
            const nameToSearch = document.getElementById('myOrderName').value.trim();
            const myOrderStatusCard = document.getElementById('myOrderStatusCard');
            const noOrderMessage = document.getElementById('noOrderMessage');

            if (!nameToSearch) {
                myOrderStatusCard.classList.add('hidden');
                noOrderMessage.classList.remove('hidden');
                noOrderMessage.innerHTML = '<h3>ì£¼ë¬¸ì ì´ë¦„ì„ ì…ë ¥í•´ì£¼ì„¸ìš”.</h3>';
                return;
            }

            try {
                // âœ¨ ìˆ˜ì •: ê²€ìƒ‰ì–´ë¥¼ ì†Œë¬¸ìë¡œ ë³€í™˜í•˜ì—¬ nameLowerCase í•„ë“œì™€ ë¹„êµ
                const q = query(ordersRef, where('nameLowerCase', '==', nameToSearch.toLowerCase()), orderBy('timestamp', 'desc'), limit(1));
                const querySnapshot = await getDocs(q);

                if (!querySnapshot.empty) {
                    const myOrderDoc = querySnapshot.docs[0];
                    myOrder = { id: myOrderDoc.id, ...myOrderDoc.data() };
                    
                    const details = `
                        <strong>ë©”ë‰´:</strong> ${myOrder.menu} <span class="temp-badge ${myOrder.temp.toLowerCase()}">${myOrder.temp}</span><br>
                        <strong>ì£¼ë¬¸ì:</strong> ${myOrder.name}<br>
                        <strong>ë°°ë‹¬ìœ„ì¹˜:</strong> ${myOrder.location}<br>
                        <strong>ì˜µì…˜:</strong> ${myOrder.options.join(', ') || 'ì—†ìŒ'}<br>
                        <strong>ìš”ì²­ì‚¬í•­:</strong> ${myOrder.request || 'ì—†ìŒ'}
                    `;
                    document.getElementById('myOrderDetails').innerHTML = details;
                    
                    myOrderStatusCard.classList.remove('hidden');
                    noOrderMessage.classList.add('hidden');

                    updateProgressBar(myOrder.status);
                } else {
                    myOrderStatusCard.classList.add('hidden');
                    noOrderMessage.classList.remove('hidden');
                    noOrderMessage.innerHTML = `<h3>'${nameToSearch}'ë‹˜ì˜ ì£¼ë¬¸ ë‚´ì—­ì´ ì—†ìŠµë‹ˆë‹¤.</h3><p>ì´ë¦„ì„ ë‹¤ì‹œ í™•ì¸í•´ì£¼ì„¸ìš”!</p>`;
                }
            } catch (error) {
                console.error("Error searching for my order: ", error);
                showToast('âŒ ì£¼ë¬¸ ê²€ìƒ‰ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.');
                myOrderStatusCard.classList.add('hidden');
                noOrderMessage.classList.remove('hidden');
                noOrderMessage.innerHTML = `<h3>ì£¼ë¬¸ ê²€ìƒ‰ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.</h3><p>ë‹¤ì‹œ ì‹œë„í•´ì£¼ì„¸ìš”.</p>`;
            }
        }
        
        function updateProgressBar(status) {
            document.querySelectorAll('.progress-step').forEach(step => step.classList.remove('active', 'completed'));
            if (status === 'checking') {
                document.getElementById('progressStep1').classList.add('active');
            } else if (status === 'making') {
                document.getElementById('progressStep1').classList.add('completed');
                document.getElementById('progressStep2').classList.add('active');
            } else if (status === 'completed') {
                document.getElementById('progressStep1').classList.add('completed');
                document.getElementById('progressStep2').classList.add('completed');
                document.getElementById('progressStep3').classList.add('completed');
            }
        }

        function renderAdminOrders() {
            const orderList = document.getElementById('orderList');
            orderList.innerHTML = '';
            
            if (orders.length === 0) {
                document.getElementById('noAdminOrderMessage').classList.remove('hidden');
                document.getElementById('totalOrders').textContent = 0;
                document.getElementById('completedOrders').textContent = 0;
                document.getElementById('pendingOrders').textContent = 0;
                return;
            }
            document.getElementById('noAdminOrderMessage').classList.add('hidden');

            const totalCount = orders.length;
            const completedCount = orders.filter(o => o.status === 'completed').length;
            const pendingCount = totalCount - completedCount;

            document.getElementById('totalOrders').textContent = totalCount;
            document.getElementById('completedOrders').textContent = completedCount;
            document.getElementById('pendingOrders').textContent = pendingCount;

            // âœ¨ ìˆ˜ì •: ì£¼ë¬¸ ì •ë ¬ ë¡œì§
            const pendingOrders = orders.filter(o => o.status !== 'completed').sort((a, b) => a.timestamp?.toMillis() - b.timestamp?.toMillis());
            const completedOrders = orders.filter(o => o.status === 'completed').sort((a, b) => a.timestamp?.toMillis() - b.timestamp?.toMillis());
            
            const sortedOrders = [...pendingOrders, ...completedOrders];

            sortedOrders.forEach(order => {
                const orderItem = document.createElement('div');
                orderItem.classList.add('order-item');
                orderItem.innerHTML = `
                    <div class="order-info">
                        <h3>${order.menu} <span class="temp-badge ${order.temp.toLowerCase()}">${order.temp}</span></h3>
                        <p><strong>ì£¼ë¬¸ì:</strong> ${order.name}</p>
                        <p><strong>ìœ„ì¹˜:</strong> ${order.location}</p>
                        <p><strong>ì˜µì…˜:</strong> ${order.options.join(', ') || 'ì—†ìŒ'}</p>
                        <p><strong>ìš”ì²­:</strong> ${order.request || 'ì—†ìŒ'}</p>
                    </div>
                    <div class="order-status">
                        <select class="status-select" onchange="updateOrderStatus('${order.id}', this.value)">
                            <option value="checking" ${order.status === 'checking' ? 'selected' : ''}>ì£¼ë¬¸ ì ‘ìˆ˜</option>
                            <option value="making" ${order.status === 'making' ? 'selected' : ''}>ì œì¡° ì¤‘</option>
                            <option value="completed" ${order.status === 'completed' ? 'selected' : ''}>ë°°ë‹¬ ì™„ë£Œ</option>
                        </select>
                        <button class="delete-btn" onclick="showDeleteModal('${order.id}')">ì‚­ì œ</button>
                    </div>
                `;
                orderList.appendChild(orderItem);
            });
        }

        function updateOrderStatus(id, newStatus) {
            updateDoc(doc(ordersRef, id), { status: newStatus })
                .then(() => {
                    console.log("Order status updated successfully!");
                    showToast('âœ… ì£¼ë¬¸ ìƒíƒœê°€ ì—…ë°ì´íŠ¸ë˜ì—ˆìŠµë‹ˆë‹¤.');
                })
                .catch((error) => {
                    console.error("Error updating document: ", error);
                    showToast('âŒ ìƒíƒœ ì—…ë°ì´íŠ¸ì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.');
                });
        }

        let orderToDeleteId = null;

        function showDeleteModal(id) {
            orderToDeleteId = id;
            openModal('deleteModal');
        }

        document.getElementById('cancelDeleteBtn').addEventListener('click', () => {
            closeModal('deleteModal');
            orderToDeleteId = null;
        });

        document.getElementById('confirmDeleteBtn').addEventListener('click', async () => {
            if (orderToDeleteId) {
                await deleteDoc(doc(ordersRef, orderToDeleteId))
                    .then(() => {
                        console.log("Document successfully deleted!");
                        showToast('âœ… ì£¼ë¬¸ì´ ì‚­ì œë˜ì—ˆìŠµë‹ˆë‹¤.');
                    }).catch((error) => {
                        console.error("Error removing document: ", error);
                        showToast('âŒ ì£¼ë¬¸ ì‚­ì œì— ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.');
                    });
            }
            closeModal('deleteModal');
            orderToDeleteId = null;
        });

        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        function openModal(modalId) {
            document.getElementById(modalId).classList.add('show');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('show');
        }

        function openAdminPasswordModal() {
            openModal('passwordModal');
            document.getElementById('adminPasswordInput').value = '';
        }

        function checkAdminPassword() {
            const password = document.getElementById('adminPasswordInput').value;
            if (password === adminPassword) {
                closeModal('passwordModal');
                switchMode('admin');
            } else {
                alert('ğŸš¨ ë¹„ë°€ë²ˆí˜¸ê°€ í‹€ë ¸ìŠµë‹ˆë‹¤.');
                document.getElementById('adminPasswordInput').value = '';
            }
        }
        window.switchMode = switchMode;
        window.openAdminPasswordModal = openAdminPasswordModal;
        window.selectMenu = selectMenu;
        window.selectTemp = selectTemp;
        window.selectOption = selectOption;
        window.searchMyOrder = searchMyOrder;
        window.updateOrderStatus = updateOrderStatus;
        window.showDeleteModal = showDeleteModal;
        window.closeModal = closeModal;
        window.checkAdminPassword = checkAdminPassword;
    </script>
